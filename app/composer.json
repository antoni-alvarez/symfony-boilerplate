{
    "name": "antoni-alvarez/symfony-boilerplate",
    "description": "Containerized Symfony boilerplate",
    "license": "proprietary",
    "type": "project",
    "authors": [
        {
            "name": "Antoni Alvarez"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-redis": "*",
        "symfony/console": "^7.3",
        "symfony/flex": "^2.8",
        "symfony/framework-bundle": "^7.3",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "^7.3",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2",
        "php-cs-fixer/shim": "^3",
        "phpat/phpat": "^0.11",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-phpunit": "^2",
        "phpstan/phpstan-symfony": "^2",
        "phpunit/phpunit": "^11.5",
        "symfony/maker-bundle": "^1",
        "symfony/phpunit-bridge": "^7.3"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php83": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^7.3"
        }
    },
    "scripts": {
        "analyze:all": [
            "@analyze:lint",
            "@analyze:standards",
            "@analyze:phpstan"
        ],
        "analyze:lint": [
            "composer validate --strict",
            "composer normalize --dry-run"
        ],
        "analyze:phpstan": [
            "vendor/bin/phpstan analyse -c phpstan.dist.neon",
            "vendor/bin/phpstan analyse -c tests/phpstan.tests.neon"
        ],
        "analyze:standards": [
            "vendor/bin/php-cs-fixer fix --dry-run --verbose --show-progress=dots"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "fix:standards": [
            "vendor/bin/php-cs-fixer fix --verbose --show-progress=dots"
        ],
        "test": [
            "bin/phpunit -c tests/phpunit.xml"
        ]
    }
}
